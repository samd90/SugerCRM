<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#454545">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#454545"
        android:orientation="vertical">

        <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"></include>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subTitle"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="Account Name :" />

            <TextView
                android:id="@+id/text_subje"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:paddingLeft="10dp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/off"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="Opportunity Amount :" />


            <TextView
                android:id="@+id/text_amount"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:paddingLeft="10dp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/fax"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="Expected Close Date :" />


            <TextView
                android:id="@+id/text_close_date"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:paddingLeft="10dp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/web"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="Type :" />


            <TextView
                android:id="@+id/text_type"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:paddingLeft="10dp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/email"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="Lead Source :" />

            <TextView
                android:id="@+id/text_lead_s"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:paddingLeft="10dp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/bill"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="Sales Stage :" />


            <TextView
                android:id="@+id/text_sale_s"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:paddingLeft="10dp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView

                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="Campaign :" />


            <TextView
                android:id="@+id/text_camp"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:paddingLeft="10dp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView

                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="Probability :">

            </TextView>

            <TextView
                android:id="@+id/text_prob"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:paddingLeft="10dp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView

                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="Assigned To :">

            </TextView>

            <TextView
                android:id="@+id/text_assign"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:paddingLeft="10dp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView

                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="Created By :">

            </TextView>

            <TextView
                android:id="@+id/text_crtd_by"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:paddingLeft="10dp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView

                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="Date Created :">

            </TextView>

            <TextView
                android:id="@+id/text_date_crtd"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:paddingLeft="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/liner1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/type"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="Date Modified :">

            </TextView>

            <TextView
                android:id="@+id/text_date_mod"
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:paddingLeft="10dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
